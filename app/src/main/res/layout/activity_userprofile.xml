<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userprofile"
        android:orientation="vertical" android:paddingTop="10dp" android:background="#020202">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp" android:id="@+id/cardView" app:cardBackgroundColor="#B7EAD8"
            app:cardCornerRadius="20dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/image" app:layout_constraintVertical_bias="0.0"
    >
        <TextView
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginTop="145dp"
                android:layout_marginLeft="40dp" android:textSize="18sp" android:textStyle="bold"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gemail"
                android:textSize="18sp" android:textStyle="bold"
                android:textColor="#121212" android:layout_marginTop="145dp" android:layout_marginLeft="120dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gname"
                android:textSize="18sp" android:textStyle="bold"
                android:layout_marginLeft="120dp" android:layout_marginTop="70dp" android:textColor="#090909"/>
        <TextView
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="70dp"
                android:layout_marginLeft="40dp" android:textSize="18sp" android:textStyle="bold"
                android:textColor="#000000"/>
        <View
                android:layout_width="9dp"
                android:layout_height="match_parent" android:id="@+id/view2"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="46dp" android:id="@+id/view"
                android:background="#6A3333"
                android:layout_marginTop="12dp"/>
    </androidx.cardview.widget.CardView>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:id="@+id/image" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp" android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>